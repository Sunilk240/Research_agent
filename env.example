# ============================================
# Research Agent - Environment Configuration
# ============================================

# ============================================
# REQUIRED API KEYS
# ============================================

# Cerebras AI API Key (REQUIRED)
# Get your key from: https://cloud.cerebras.ai/
# Used for: Main LLM inference and agent reasoning
CEREBRAS_API_KEY=your_cerebras_api_key_here

# Tavily Search API Key (REQUIRED)
# Get your key from: https://tavily.com/
# Used for: Primary web search and real-time information
TAVILY_API_KEY=your_tavily_api_key_here

# E2B Sandbox API Key (REQUIRED)
# Get your key from: https://e2b.dev/
# Used for: Secure Python code execution in sandbox
E2B_API_KEY=your_e2b_api_key_here


# ============================================
# OPTIONAL API KEYS
# ============================================

# GitHub Personal Access Token (OPTIONAL)
# Get your token from: https://github.com/settings/tokens
# Used for: Analyzing private GitHub repositories
# GITHUB_PERSONAL_ACCESS_TOKEN=your_github_token_here


# ============================================
# SERVER CONFIGURATION
# ============================================

# Server Port (default: 8001)
PORT=8001

# Server Host (default: 0.0.0.0 for all interfaces)
HOST=0.0.0.0

# CORS Allowed Origins (comma-separated)
# Add your frontend URLs here
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000


# ============================================
# LOGGING CONFIGURATION
# ============================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log File Path
LOG_FILE=agent.log

# Maximum Log File Size (in MB)
MAX_LOG_SIZE_MB=50


# ============================================
# AI MODEL CONFIGURATION
# ============================================

# Cerebras Model Selection
# Options: llama-3.3-70b, gpt-oss-120b, zai-glm-4.7
CEREBRAS_MODEL=zai-glm-4.7

# Model Temperature (0.0 - 1.0)
# Lower = more focused, Higher = more creative
MODEL_TEMPERATURE=0

# Maximum Tokens for Response
# Leave empty for no limit
# MAX_TOKENS=4000


# ============================================
# TOOL CONFIGURATION
# ============================================

# Tavily Search Settings
TAVILY_MAX_RESULTS=10

# Wikipedia Search Settings
WIKIPEDIA_MAX_DOCS=2
WIKIPEDIA_MAX_CHARS=4000

# arXiv Search Settings
ARXIV_MAX_PAPERS=3

# PubMed Search Settings
PUBMED_MAX_ARTICLES=3

# PDF Extraction Settings
PDF_MAX_PAGES=10

# URL Content Fetching Settings
URL_CONTENT_MAX_LENGTH=3000


# ============================================
# RATE LIMITING & PERFORMANCE
# ============================================

# Request Timeout (in seconds)
REQUEST_TIMEOUT=300

# Maximum Concurrent Requests
MAX_CONCURRENT_REQUESTS=10

# Rate Limit (requests per minute)
RATE_LIMIT_RPM=60


# ============================================
# SECURITY SETTINGS
# ============================================

# Enable/Disable Admin Endpoints
ENABLE_ADMIN_ENDPOINTS=true

# Admin API Key (optional, for securing admin endpoints)
# ADMIN_API_KEY=your_secure_admin_key_here

# Enable CORS (true/false)
ENABLE_CORS=true


# ============================================
# DATABASE CONFIGURATION (OPTIONAL)
# ============================================

# MongoDB Connection String (for future use)
# MONGODB_CONNECTION_STRING=mongodb://localhost:27017/research_agent

# Redis Connection String (for caching, future use)
# REDIS_URL=redis://localhost:6379


# ============================================
# DEVELOPMENT SETTINGS
# ============================================

# Debug Mode (true/false)
DEBUG=false

# Auto-reload on code changes (true/false)
AUTO_RELOAD=true

# Show detailed error messages (true/false)
SHOW_ERROR_DETAILS=true


# ============================================
# NOTES
# ============================================
# 
# 1. Copy this file to .env and fill in your actual API keys
# 2. Never commit .env file to version control
# 3. Keep your API keys secure and private
# 4. Get API keys from:
#    - Cerebras: https://cloud.cerebras.ai/
#    - Tavily: https://tavily.com/
#    - E2B: https://e2b.dev/
# 
# 5. Minimum required keys for basic functionality:
#    - CEREBRAS_API_KEY (required)
#    - TAVILY_API_KEY (required)
#    - E2B_API_KEY (required for code execution)
#
# 6. Optional features:
#    - GitHub token: For analyzing private repositories
#    - MongoDB: For persistent storage (future feature)
#    - Redis: For caching (future feature)
#
# ============================================
